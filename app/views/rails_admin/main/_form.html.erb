<%= form_for @object do |f| %>
  <div class="field">
    <%= f.label :content %>
    <br/>
    <%= f.text_field :content %>
  </div>
  <h3>Answers</h3>
  <div id='answers'>
    <%= f.fields_for :answers do |answer| %>
      <%= render 'answer_fields', :f => answer %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add answer', f, :answers %>
    </div>
  </div>
  <%= f.submit 'Save' %>
<% end %>
